@using FakturaWeb.Models
@model FakturaWeb.Models.Faktura


@{
    ViewBag.Title = "Details";
    var listStavkas = (List<Stavka>)ViewData["listStavkas"];
}

<h2>Details</h2>


    <h4>Faktura</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.BrojFakture)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ukupno)
            </th>
        </tr>
        
        <tr>
            <td>
                @Html.DisplayFor(model => model.Datum)
            </td>

            <td>
                @Html.DisplayFor(model => model.BrojFakture)
            </td>

            <td>
                @Html.DisplayFor(model => model.Ukupno)
            </td>
        </tr>
        
    </table>

<table class="table">
    <tr>
        <th>
            Redni broj
        </th>
        <th>
            Kolicina
        </th>
        <th>
            Cena
        </th>
        <th>
            Ukupno
        </th>
        
    </tr>

    @foreach (var item in listStavkas)
    {
        <tr>
            <td>
                @item.RedniBroj
            </td>
            <td>
                @item.Kolicina
            </td>
            <td>
                @item.Cena
            </td>
            <td>
                @item.Ukupno
            </td>
            
        </tr>
    }
    
</table>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.FakturaID }) |
