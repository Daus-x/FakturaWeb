@model FakturaProject.ViewModel.FakturaViewModel

@{
    ViewBag.Title = "Create";

}

<h2>Create</h2>

<input type="button" value="Dodaj stavku" class="btn btn-default" onclick="addNewStavka()" />
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <table class="table">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Faktura.Datum)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Faktura.BrojFakture)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Faktura.Ukupno)
                </td>
            </tr>
            <tr>
                @Html.HiddenFor(model => model.Faktura.FakturaID)
                <td>
                    @Html.EditorFor(Model => Model.Faktura.Datum, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.Faktura.Datum, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(Model => Model.Faktura.BrojFakture, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.Faktura.BrojFakture, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => model.Faktura.Ukupno, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
            </tr>
        </table>

        <table class="table" id="StavkaTable">
            <tr>
                <th>
                    Redni Broj
                </th>
                <th>
                    Cena
                </th>
                <th>
                    Kolicina
                </th>
                <th>
                    Ukupno
                </th>
                <th></th>
            </tr>
            <tr id="ID1">
                @Html.HiddenFor(modelItem => Model.Stavkas[0].StavkaID)
                <td>
                    @Html.TextBoxFor(ModelItem => Model.Stavkas[0].RedniBroj, new { @class = "form-control", @readonly = "readonly", @Value = "1" })
                </td>
                <td>
                    @Html.EditorFor(ModelItem => Model.Stavkas[0].Cena, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => Model.Stavkas[0].Cena, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(ModelItem => Model.Stavkas[0].Kolicina, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(modelItem => Model.Stavkas[0].Kolicina, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(ModelItem => Model.Stavkas[0].Ukupno, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </td>
                <td></td>
            </tr>

        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    
    @Scripts.Render("~/bundles/jqueryval")
}
